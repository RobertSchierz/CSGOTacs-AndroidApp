<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaveDeleteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buttonLeaveGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/orangePrimary"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/button_leave_group"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/buttonDeleteGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangePrimary"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/button_delete_group"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size"
        android:visibility="gone" />
</LinearLayout>